mixin reviewCard(userReview)
    .reviews__card
        .reviews__avatar
            img.reviews__avatar-img(src=`/img/users/${userReview.user.photo}`, alt=`${userReview.user.name}`)
            h6.reviews__user= userReview.user.name
        p.reviews__text= userReview.review
        .reviews__rating
            each star in [1, 2, 3, 4, 5]
                svg.reviews__star(class=`reviews__star--${userReview.rating >= star ? 'active' : 'inactive'}`)
                    use(xlink:href='/img/icons.svg#icon-star')